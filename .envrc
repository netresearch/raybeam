# .envrc — direnv configuration for Raybeam
# Run 'direnv allow' after first checkout to enable

export PROJECT_NAME="${PROJECT_NAME:-raybeam}"

# Go environment
export GOFLAGS="-mod=readonly"

# Development LDAP configuration (override as needed)
# export LDAP_SERVER=ldap://localhost:389
# export LDAP_BASE_DN=dc=example,dc=org
# export LDAP_READ_USER=cn=admin,dc=example,dc=org
# export LDAP_READ_PASSWORD=admin

echo "direnv: Loaded $PROJECT_NAME — run 'make help' for common commands."
echo "direnv: First time here? Run 'direnv allow' to enable automatic environment loading."